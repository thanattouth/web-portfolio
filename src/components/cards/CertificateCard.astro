---
import type { Certificate } from '../../data/contents.ts';
export interface Props {
  cert: Certificate;
}
const { cert } = Astro.props;
---
<article class="bg-white rounded-none shadow-lg border border-gray-200 overflow-hidden flex flex-col">
  <div class="p-6 flex flex-col h-full">
    <h4 class="text-xl font-bold text-gray-900 mb-1">{cert.title}</h4>
    <p class="text-sm text-gray-500 mb-3">Issued by: {cert.issuer} ({cert.date})</p>
    
    <div class="flex flex-wrap gap-2 mb-4">
      {cert.tags.map(tag => (
        <span class="bg-gray-200 text-gray-700 text-xs font-semibold px-2.5 py-0.5 rounded">{tag}</span>
      ))}
    </div>
    
    <div class="mt-auto">
      {cert.credentialUrl && (
        <a href={cert.credentialUrl} target="_blank" rel="noopener noreferrer" class="font-semibold text-blue-600 hover:underline">
          View Credential &rarr;
        </a>
      )}
    </div>
  </div>
</article>